<h3>Upload a book</h3>
<div class="container">
  <div class="row">
    <div class="class col-md-10 col-sm-6">
      <div class="well">

      <%= form_for @textbook, url: {action: "upload_book"} do |f|%>  
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :author %>
        <%= f.text_field :author %>
        <%= f.label :description %>
        <%= f.text_field :summary %>
        <br>
        <br>
        <%= f.label :PDF %>
        <%= f.file_field :url %>
        <br>
        <%= f.submit "Upload" %>
      <%end %>
      
      </div>
    </div>
  </div>
</div>